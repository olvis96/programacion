// vector parcial: Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100


using namespace std;
int cargar (int vec[],int n);
void mostrar (int vec[],int n);

void main()
{
   int n,s,sig,vec[MAX];

   cout<<"ingrese la cantidad de numeros:";
   cin>> n;
   s=cargar (vec,n);
   mostrar (vec,s);
    getch();
}

 int cargar (int vec[],int n)
 {
	int sig,j;

   sig=-1;
   j=0;
   for (int i=2;i<=n;i=i+2)
   {
      vec[j]=sig*i;
      sig=-sig;
	  j=j+1;
   }
   return j;
 }
 void mostrar (int vec[],int n)
 {
	 for (int i=0;i<n;i++)
		 cout<<"vec["<<i<<"]= "<<vec [i]<<endl;
 }
